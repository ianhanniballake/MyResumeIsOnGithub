<resources>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="DrawerItemTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_item_height</item>
        <item name="android:background">@drawable/drawer_item_selector</item>
        <item name="android:drawablePadding">@dimen/drawer_item_horizontal_padding</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/drawer_item_horizontal_padding</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>

    <style name="DrawerDividerTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider_color</item>
    </style>

</resources>
